<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/locker_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:text="보관함"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/locker_login_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:text="로그인"
        android:textColor="@color/select_color"
        android:textSize="15sp"
        app:layout_constraintTop_toTopOf="@id/locker_title_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/locker_title_tv" />

    <!-- TabLayout -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/locker_content_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:tabSelectedTextColor="#3f3fff"
        app:tabIndicatorFullWidth="false"
        app:tabRippleColor="#00ff0000"
        app:tabIndicatorColor="#3f3fff"
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toBottomOf="@id/locker_title_tv"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- TabLayout 하단 UI 위젯 -->
    <ImageView
        android:id="@+id/locker_select_all_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/btn_playlist_select_off"
        app:layout_constraintTop_toBottomOf="@id/locker_content_tb"
        app:layout_constraintStart_toStartOf="@id/locker_content_tb"/>

    <TextView
        android:id="@+id/locker_select_all_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전체 선택"
        android:textColor="@color/gray_color"
        app:layout_constraintStart_toEndOf="@id/locker_select_all_iv"
        app:layout_constraintTop_toTopOf="@id/locker_select_all_iv"
        app:layout_constraintBottom_toBottomOf="@id/locker_select_all_iv"/>

    <ImageView
        android:id="@+id/locker_play_all_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginStart="20dp"
        android:src="@drawable/icon_browse_arrow_right"
        app:layout_constraintTop_toTopOf="@id/locker_select_all_iv"
        app:layout_constraintStart_toEndOf="@id/locker_select_all_tv"
        app:layout_constraintBottom_toBottomOf="@id/locker_select_all_tv"/>

    <TextView
        android:id="@+id/locker_play_all_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전체 듣기"
        android:textColor="@color/gray_color"
        app:layout_constraintStart_toEndOf="@id/locker_play_all_iv"
        app:layout_constraintTop_toTopOf="@id/locker_play_all_iv"
        app:layout_constraintBottom_toBottomOf="@id/locker_play_all_iv"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="편집"
        android:layout_marginEnd="20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/locker_select_all_iv"
        app:layout_constraintBottom_toBottomOf="@id/locker_select_all_iv"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- ViewPager2 -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/locker_content_vp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/locker_select_all_iv"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>