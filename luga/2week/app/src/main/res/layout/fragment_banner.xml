<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- 배경 이미지 상단 텍스트 -->
    <TextView
        android:id="@+id/home_panel_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="달밤의 감성 산책"
        android:textColor="@color/white"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- 텍스트 우측 재생버튼 -->
    <ImageView
        android:id="@+id/home_panel_btn_play_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/btn_panel_play_large"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/home_panel_title_tv"/>

    <TextView
        android:id="@+id/song_list_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="총 17곡 2025.11.04"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/home_panel_title_tv"
        app:layout_constraintTop_toBottomOf="@id/home_panel_btn_play_iv"/>

    <ImageView
        android:id="@+id/home_panel_album_img_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/img_album_exp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/song_list_date_tv" />

    <TextView
        android:id="@+id/home_panel_album_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Lady"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/home_panel_album_singer_tv"
        app:layout_constraintStart_toEndOf="@+id/home_panel_album_img_iv"
        app:layout_constraintTop_toTopOf="@+id/home_panel_album_img_iv" />

    <TextView
        android:id="@+id/home_panel_album_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kenshi Yonezu"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@+id/home_panel_album_title_tv"
        app:layout_constraintStart_toEndOf="@+id/home_panel_album_img_iv"
        app:layout_constraintBottom_toBottomOf="@+id/home_panel_album_img_iv" />

    <ImageView
        android:id="@+id/home_panel_album_img2_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/img_album_exp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/home_panel_album_img_iv" />

    <TextView
        android:id="@+id/home_panel_album_title2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:text="Butter"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/home_panel_album_singer2_tv"
        app:layout_constraintStart_toEndOf="@+id/home_panel_album_img2_iv"
        app:layout_constraintTop_toTopOf="@+id/home_panel_album_img2_iv" />

    <TextView
        android:id="@+id/home_panel_album_singer2_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BTS"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginStart="15dp"
        app:layout_constraintTop_toBottomOf="@+id/home_panel_album_title2_tv"
        app:layout_constraintStart_toEndOf="@+id/home_panel_album_img2_iv"
        app:layout_constraintBottom_toBottomOf="@+id/home_panel_album_img2_iv" />

</androidx.constraintlayout.widget.ConstraintLayout>