<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:background="?attr/selectableItemBackground">


    <TextView
        android:id="@+id/item_song_track_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:textSize="14sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="01" />


    <TextView
        android:id="@+id/item_song_title_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toEndOf="@+id/item_song_track_number_tv"
        app:layout_constraintEnd_toStartOf="@id/item_song_more_iv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/item_song_singer_tv"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="노래 제목" />


    <TextView
        android:id="@+id/item_song_singer_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textColor="@color/gray"
        android:textSize="14sp"
        android:maxLines="1"
        android:ellipsize="end"
        app:layout_constraintStart_toStartOf="@+id/item_song_title_tv"
        app:layout_constraintTop_toBottomOf="@+id/item_song_title_tv"
        app:layout_constraintEnd_toStartOf="@id/item_song_more_iv"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="가수 이름" />


    <ImageView
        android:id="@+id/item_song_more_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/btn_player_more"
        app:tint="@color/gray"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="더보기" />


    <ImageView
        android:id="@+id/item_song_play_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/btn_play_arrow"
        app:tint="@color/gray"
        android:layout_marginEnd="15dp"
        app:layout_constraintEnd_toStartOf="@id/item_song_more_iv"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:contentDescription="재생" />

</androidx.constraintlayout.widget.ConstraintLayout>
