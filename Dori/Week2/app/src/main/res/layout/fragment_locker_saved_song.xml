<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    tools:context=".LockerSavedSongFragment">


    <TextView
        android:id="@+id/tv_select_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전체 선택"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:drawablePadding="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:focusable="true"/>


    <TextView
        android:id="@+id/tv_play_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전체 듣기"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:drawablePadding="4dp"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toEndOf="@id/tv_select_all"
        app:layout_constraintTop_toTopOf="@id/tv_select_all"
        app:layout_constraintBottom_toBottomOf="@id/tv_select_all"
        android:clickable="true"
        android:focusable="true"/>


    <TextView
        android:id="@+id/btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="편집"
        android:textSize="14sp"
        android:textColor="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_select_all"
        app:layout_constraintBottom_toBottomOf="@id/tv_select_all"
        android:clickable="true"
        android:focusable="true"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/locker_saved_song_rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@+id/btn_edit"
        app:layout_constraintStart_toStartOf="parent"

        tools:listitem="@layout/item_saved_song"/>




</androidx.constraintlayout.widget.ConstraintLayout>